<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.grey.myblog.mapper.ArticleMapper">

    <resultMap id="BaseResultMap" type="com.grey.myblog.model.entity.Article">
            <id property="id" column="id" />
            <result property="title" column="title" />
            <result property="content" column="content" />
            <result property="excerpt" column="excerpt" />
            <result property="coverImage" column="cover_image" />
            <result property="sortOrder" column="sort_order" />
            <result property="viewCount" column="view_count" />
            <result property="categoryId" column="category_id" />
            <result property="authorId" column="author_id" />
            <result property="status" column="status" />
            <result property="createTime" column="create_time" />
            <result property="updateTime" column="update_time" />
            <result property="isDelete" column="is_delete" />
    </resultMap>

    <sql id="Base_Column_List">
        id,title,content,excerpt,cover_image,sort_order,
        view_count,category_id,author_id,status,create_time,
        update_time,is_delete
    </sql>

    <!-- 自定义分页查询文章列表 -->
    <select id="selectArticlePage" resultMap="BaseResultMap">
        SELECT
            id,
            title,
            excerpt,
            cover_image,
            sort_order,
            view_count,
            category_id,
            author_id,
            status,
            create_time,
            update_time,
            is_delete
        FROM article
        <where>
            is_delete = 0
            <if test="request.categoryId != null">
                AND category_id = #{request.categoryId}
            </if>
            <if test="request.status != null">
                AND status = #{request.status}
            </if>
            <if test="request.tagId != null">
                AND EXISTS (
                    SELECT 1 FROM article_tag
                    WHERE article_tag.article_id = article.id
                    AND article_tag.tag_id = #{request.tagId}
                )
            </if>
        </where>
        <choose>
            <when test="request.sortField != null and request.sortField != ''">
                <choose>
                    <when test="request.sortField == 'create_time' or request.sortField == 'createTime'">
                        ORDER BY create_time
                        <choose>
                            <when test="request.sortOrder == 'descend' or request.sortOrder == 'desc'">
                                DESC
                            </when>
                            <otherwise>
                                ASC
                            </otherwise>
                        </choose>
                    </when>
                    <when test="request.sortField == 'view_count' or request.sortField == 'viewCount'">
                        ORDER BY view_count
                        <choose>
                            <when test="request.sortOrder == 'descend' or request.sortOrder == 'desc'">
                                DESC
                            </when>
                            <otherwise>
                                ASC
                            </otherwise>
                        </choose>
                    </when>
                    <otherwise>
                        ORDER BY create_time DESC
                    </otherwise>
                </choose>
            </when>
            <otherwise>
                ORDER BY create_time DESC
            </otherwise>
        </choose>
    </select>
</mapper>
